<?xml version="1.0" encoding="utf-8"?>
<com.android.view.joinme.EntryListEntryView
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/list_item_root"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dp"
	android:scrollbars="vertical" android:fadingEdge="vertical"
	android:background="@color/view_color" android:focusable="false">

	<ImageView android:id="@+id/ImageButton_Avatar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:adjustViewBounds="true" android:scaleType="fitXY"
		android:maxHeight="@dimen/avatar_size" android:minHeight="@dimen/avatar_size"
		android:src="@drawable/joinme" android:padding="5px" android:focusable="false"></ImageView>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:focusable="false">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:focusable="false">

			<TextView android:id="@+id/Ad_NickName"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textStyle="bold" android:textColor="@color/view_text" android:focusable="false"></TextView>
			<TextView android:id="@+id/Level" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="@color/level"
				android:gravity="right" android:textSize="3pt" android:padding="5px" android:focusable="false"></TextView>
		</LinearLayout>

		<TextView android:id="@+id/Ad_Request" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="@color/view_text"
			android:focusable="false"></TextView>
		<TextView android:id="@+id/date" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="@color/view_text"
			android:textSize="3pt" android:focusable="false"></TextView>
	</LinearLayout>
</com.android.view.joinme.EntryListEntryView>
  

